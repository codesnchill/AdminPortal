
@{
    Layout = "../Shared/_Layout.cshtml";
}

@model PaginatedList<AdminPortal.Models.Milestone>

@section Scripts{
    <script>
        function edit(id) {
            location.href = "/Milestone/EditReward/" + id;
        }

        function add() {
            location.href = "/Milestone/AddReward/";
        }
    </script>
}

@section CSS {
    <link rel="stylesheet" href="~/styles/managemilestones.css">
}

<div class="right-section white-background">
    <div class="title">
        <p class="title-control">Manage Milestones</p>
    </div>

    <hr class="divider">

    <div class="search-bar">
        <div class="input-field-search">
            <img src="../images/search.png" alt="Magnifying Glass logo">
            <input onkeyup="filter()" id="reward" type='text' name='reward' size='15' placeholder='Search by Reward Name...' />
        </div>


        <div class="new-reward-button">
            <button class="orange-background" name="Add" onclick="add()">Add New Reward</button>
        </div>

    </div>
    <table id="datatable" class="table table-bordered">
        <thead class="blue-background">
            <tr>
                <th>ID</th>
                <th>Reward</th>
                <th>Points Needed</th>
                <th>CreatedBy</th>
                <th>Last Update</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RewardId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reward)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    <button onclick="edit(@item.RewardId)">Edit</button>
                </td>
            </tr>
            }
        </tbody>
    </table>
    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }
    <nav aria-label="Pagination" class="col-12">
        <ul class="pagination justify-content-end">
            <li class="page-item @prevDisabled">
                <a class="page-link"
                   asp-route-pageIndex="@(Model.PageIndex - 1)"
                   asp-controller="Milestone"
                   asp-action="SetPage"
                   aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @foreach (var i in Model.PageIndexesToDisplay)
            {
                var activeClass = i.IsActive ? "active" : "";

                <li class="page-item @activeClass">
                    <a class="page-link"
                       asp-route-pageIndex="@(i.Index)"
                       asp-controller="Milestone"
                       asp-action="SetPage">@i.Index</a>
                </li>
            }
            <li class="page-item @nextDisabled">
                <a class="page-link"
                   asp-route-pageIndex="@(Model.PageIndex + 1)"
                   asp-controller="Milestone"
                   asp-action="SetPage"
                   aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
