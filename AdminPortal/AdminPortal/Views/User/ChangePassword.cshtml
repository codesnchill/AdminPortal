@{
    Layout = "../Shared/_Layout.cshtml";
}

@model IEnumerable<AdminPortal.Models.Employee>

@section Scripts {

}

@section CSS {
    <link rel="stylesheet" href="~/styles/changepw.css">
}
<div class="right-section white-background">
    <div class="title">
        <p class="title-control">Manage Users</p>
    </div>
    <div class="view-buttons">
        <button class="view-details" type="button">
            View User Details
        </button>
        <button class="view-deleted" type="button">
            View Deleted Users
        </button>

    </div>
    <hr class="divider">
    <form>
        <div class="edit-container">
            <div class="title-bar orange-background">
                <p class="panel-header">Change User Password</p>

            </div>
            <div class="row1-employeeID">
                <label class="normal-weight" for="employeeID">Employee ID:</label>
                <input type="text" name="employeeID" readonly>
            </div>
            <div class="row2-employeeName">
                <label class="normal-weight" for="employeeName">Employee Name:</label>
                <input type='text' name='employeeName' readonly />
            </div>
            <div class="row3-currentPassword">
                <label class="normal-weight" for="currentPassword">Current Password:</label>
                <input type='text' name='currentPassword' readonly />
            </div>
            <div class="row4-newPassword">
                <label class="normal-weight" for="rights">New Password:</label>
                <input type='text' name='newPassword' readonly />
            </div>

            <div class="row5-buttons">

                <button class="save">Save</button>
                <button class="cancel">Cancel</button>
            </div>
        </div>
    </form>

</div>